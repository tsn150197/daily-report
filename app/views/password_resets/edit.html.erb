<% provide :title, t(".reset_password") %>
<% provide :icon, "icons/forgot-password-icon.png" %>
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 reset-password">
      <div class="login100-pic js-tilt" data-tilt>
        <%= image_tag "forgot-password.jpg" %>
      </div>
      <%= form_with url: password_reset_path(params[:id]), model: @user,
        scope: "user", method: :put, local: true,
          class: "login100-form validate-form" do |f| %>
        <span class="login100-form-title">
          <%= t ".reset_password" %>
        </span>
        <%= render "shared/flash" %>
        <%= render "shared/error_messages", object: f.object %>
        <%= hidden_field_tag :email, @user.email %>
        <div class="wrap-input100 validate-input"
          data-validate="Password is required">
          <%= f.password_field :password, class: :input100,
            placeholder: t(".password") %>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
          </span>
        </div>
        <div class="wrap-input100 validate-input"
          data-validate="Password is required">
          <%= f.password_field :password_confirmation, class: :input100,
            placeholder: t(".password_confirm") %>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
          </span>
        </div>
        <div class="container-login100-form-btn">
          <%= f.submit t(".submit"), class: "login100-form-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
