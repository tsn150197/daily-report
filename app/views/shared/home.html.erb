<% provide :title, t(".home_page") %>
<% provide :icon, "icons/admin.png" %>
<div class="masonry-item col-md-4 masonry-sizer offset-md-4">
  <div class="bd bgc-white">
    <div class="peers fxw-nw@lg+ ai-s">
      <div class="peer peer-greed w-70p@lg+ w-100@lg- p-20">
        <div class="layers">
          <div class="layer w-100 mB-10">
            <h3 class="c-grey-900 mB-20">
              <%= t ".hi" %>,
              <i class="c-red-500"><%= current_user.user_profile.name %></i>
            </h3>
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %> mT-30"><%= message %></div>
            <% end %>
            <p><%= t ".content1" %></p>
            <%= image_tag "cute.jpg", class: "w-10r bdrs-50p col-md-12" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
